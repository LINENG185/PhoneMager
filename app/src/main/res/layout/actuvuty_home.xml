<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/view_color" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:onClick="actionclick"
            android:id="@+id/tv_speedup"
            style="@style/home"
            android:drawableTop="@mipmap/icon_rocket"
            android:text="手机加速" />
        <View
            android:background="@color/view_color"
            android:layout_width="1px"
            android:layout_height="match_parent"/>

        <TextView
            style="@style/home"
            android:drawableTop="@mipmap/icon_softmgr"
            android:text="软件管理" />
        <View
            android:background="@color/view_color"
            android:layout_width="1px"
            android:layout_height="match_parent"/>

        <TextView
            style="@style/home"
            android:drawableTop="@mipmap/icon_phonemgr"
            android:text="手机检测" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/view_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:onClick="actionclick"
            android:id="@+id/tv_tel"
            style="@style/home"
            android:drawableTop="@mipmap/icon_telmgr"
            android:text="通讯大全" />
        <View
            android:background="@color/view_color"
            android:layout_width="1px"
            android:layout_height="match_parent"/>

        <TextView
            style="@style/home"
            android:drawableTop="@mipmap/icon_filemgr"
            android:text="文件管理"/>
        <View
            android:background="@color/view_color"
            android:layout_width="1px"
            android:layout_height="match_parent"/>

        <TextView
            style="@style/home"
            android:drawableTop="@mipmap/icon_sdclean"
            android:text="垃圾清理" />
    </LinearLayout>
</LinearLayout>